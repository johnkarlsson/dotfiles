Config { font = "-*-fixed-*-*-*-*-12-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
--      , lowerOnStart = False
       , position = TopW L 100
       , commands = [
                      Run MultiCpu ["-t","<total>%", "-L", "26", "-H", "51", "-l", "lightblue", "-n", "white", "-h", "red"] 10
                    , Run CoreTemp ["-t", "<core0>° <core1>°", "-L", "59", "-H", "60", "-l", "lightblue", "-n", "white", "-h", "red"] 50
                    , Run Memory ["-t","<usedratio>%"] 50
                    , Run Swap [] 10
                    , Run Wireless "wlan0" ["-t","<quality>%","-L","0","-H","32","--normal","red","--high","green"] 100
                    , Run Battery ["-t","<left>%","-L","10","-H","50","--low","#FF0000","--high","#00FF00","--","-c","charge_full"] 600
                    , Run DiskU [("/", "<usedp>%")] ["-L", "50", "-H", "97", "-m", "1", "-p", "3", "-h","red","-l","blue","-n","white"] 600
                    , Run Com "$HOME/dotfiles/.xmonad/getvolume.sh" [] "myVolume" 10
                    , Run Date "%a %b %_d" "date0" 600
                    , Run Date "(w%W)" "date1" 600
                    , Run Date "%H:%M" "date2" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% } <fc=#ee9a00>CPU</fc> %multicpu% <fc=#ffffff>%coretemp%</fc> | <fc=#ee9a00>Mem</fc> %memory% (%swap%) | <fc=#ee9a00>Disk</fc>%disku% | <fc=#ee9a00>WLAN</fc> %wlan0wi% { <fc=#ee9a00>Batt</fc> %battery% | <fc=#ee9a00>Vol</fc> %myVolume% | <fc=#ee9a00>%date0%</fc> %date1% <fc=#ee9a00>%date2%</fc>"
       }
